<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-4 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
            <div class="form-goup">
                <input type="text" class="form-control"
                placeholder="Titulo" name="titulo">
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control"
                placeholder="Subtitulo" name="subtitulo"></textarea>
            </div>
            <div class="form-group">
                <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control"
                placeholder="Cuerpo" name="cuerpo"></textarea>
            </div> 
            <button type="submit" class="btn btn-primary">Agregar</button>
             </form>
             {{#if error}}
             <p>{{message}}</p>
             {{/if}}
        </div>
    </div>
</div>